<center>
<%= form_for(user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">
  <div class="col-sm-4">
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-4">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-4">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-4">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-4">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Create Account", class: 'btn btn-dark' %>
  </div>
</div>

<% end %>
</center>
