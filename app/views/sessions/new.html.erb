<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Login Form</h2>
        <p>Please enter your email and password</p>
      </div>
        <%= form_with url: '/login' do |f| %>
          <div class="form-group">
          <%= f.text_field :email, class: "form-control", id: "inputEmail", placeholder: "Email Address"%>
          </div>

          <div class="form-group">
          <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password" %>
          </div>
          <div class="signup">
                new user? <a href="<%= new_user_path %>">sign up here</a>
          </div>
        <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
    <% end %>
</div></div></div>
